@model Category

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="row">
                <h2>Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="Id" hidden />
            <div>
                <div class="mb-3 row">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" disabled type="text" class="form-control" />
                </div>
                <div class="mb-3 row">
                    <label asp-for="DisplayOrder"></label>
                    <input asp-for="DisplayOrder" disabled class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Back To List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

