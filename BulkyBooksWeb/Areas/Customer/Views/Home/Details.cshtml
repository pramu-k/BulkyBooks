@model ShoppingCart
<form method="post">
    <div class="card shadow border-0 MT-4">
        <div class="card-header bg-secondary py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3>@Model.Product.Title</h3>
                    <p>By @Model.Product.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 col-md-12 offset-lg-1 pb-1">
                    <a asp-action="Index" class="btn">
                        <small>Back to home</small>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                    <img src="\@Model.Product.ImageUrl" width="100%" class="rounded" />
                </div>
                <div class="col-12 col-lg-6 offset-lg-1 border border-2 border-secondary">
                    <div class="col-12 col-lg-6 pb-2 ps-2">
                        <span>@Model.Product.Category.Name</span>
                    </div>
                    <div class="row ps-2">
                        <h6>ISBN: @Model.Product.ISBN</h6>
                    </div>
                    <div class="row ps-2">
                        <h6 class="text-dark text-opacity-50 pb-2">List Price: 
                            <span class="text-decoration-line-through">
                                @Model.Product.ListPrice.ToString("c")
                            </span>
                        </h6>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                        </div>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div >Price</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@Model.Product.Price.ToString("c")</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@Model.Product.Price50.ToString("c")</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@Model.Product.Price100.ToString("c")</div>
                        </div>
                    </div>
                    <div>
                        <p class="text-secondary lh-sm">@Html.Raw(Model.Product.Description)</p>
                    </div>
                    <div class="row mb-3 w-100">
                        <div class="col-md-4 w-100">
                            <div class="d-flex flex-row mb-3 w-100">
                                <div class="input-group-text bg-danger text-white border-0 fw-semibold" id="inputGroup-sizing-default">
                                    Quantity
                                </div>
                                <div class="w-25">
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>